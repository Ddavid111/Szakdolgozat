% TypeScript style for highlighting
\newcommand\typescriptstyle{\lstset{
language=java,
%basicstyle=\ttm,
backgroundcolor=\color{codebg},
otherkeywords={self},             % Add keywords here
keywordstyle=\color{deepblue},
emphstyle=\color{deepred},    % Custom highlighting style
stringstyle=\color{deepgreen},
frame=single,                         % Any extra options here
frameround=tttt,
showstringspaces=false,            % 
% numbers=left,
% numberstyle=\color{gray},
framesep=6pt,
rulecolor=\color{framecolor},
breaklines=true,
numbersep=16pt,
morekeywords={break,as,any,switch,case,if,throw,else,var,number,string,get,module,type,instanceof,typeof,public,private,enum,export,finally,for,while,void,null,super,this,new,in,return,true,false,any,extends,static,let,package,implements,interface,function,new,try,yield,const,continue,do,catch}
}}

% TypeScript environment
\lstnewenvironment{typescript}[1][]
{
\typescriptstyle
\lstset{#1}
}
{}

% Java for external files
\newcommand\typescriptexternal[2][]{{
\typescriptstyle
\lstinputlisting[#1]{#2}}}

% TypeScript for inline
\newcommand\typescriptinline[1]{{\pythonstyle\lstinline!#1!}}
